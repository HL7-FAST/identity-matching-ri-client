<%= form_with(model: authority) do |form| %>
  <% if authority.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(authority.errors.count, "error") %> prohibited this authority from being saved:</h2>

      <ul>
        <% authority.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label "Upload Certificate *.pem file", style: "display: block" %>
    <%= form.file_field :certificate, class: "form-control" %>
  </div>

  <div>
    <%= form.label "Upload corresponding private key *.p12 file", style: "display: block" %>
    <%= form.file_field :private_key, class: "form-control" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
