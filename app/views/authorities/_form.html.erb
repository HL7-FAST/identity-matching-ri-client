<%= form_with(model: authority) do |form| %>
  <% if authority.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(authority.errors.count, "error") %> prohibited this authority from being saved:</h2>

      <ul>
        <% authority.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label "Upload *.p12 file, which bundles RSA private key, public key, and certificate chain of trust", style: "display: block" %>
    <%= form.file_field :certificate, class: "form-control", placeholder: "*.p12 file" %>
  </div>

  <div>
    <%= form.label "Passphrase if your *.p12 file is passphrase protected", style: "display: block" %>
    <%= form.password_field :password, class: "form-control", placeholder: "Passphrase" %>
  </div>

  <div>
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>
