<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h1>Tiered UDAP OAuth2</h1>

            <ul class="list-group">
                <li class="list-group-item list-group-item-action">Base URL: <%= @patient_server.base %></li>
                <li class="list-group-item list-group-item-action">Bearer Token: <%= @bearer_token %></li>
                <li class="list-group-item list-group-item-action">Client Id: <%= @client_id %></li>
                <li class="list-group-item list-group-item-action">Client Secret: <%= @client_secret %></li>
                <li class="list-group-item list-group-item-action">Identity Provider: <%= @identity_provider %></li>
            </ul>

            <div class="mt-4">
                <%= link_to "Sign In via UDAP Tiered OAuth2", oauth2_restart_url, class: "btn btn-primary" %>
                <%# link_to "Register for OAuth2", oauth2_register_url, class: "btn btn-primary", data: {turbo_method: :post} %>
                <%= link_to "Register with UDAP Dynamic Client Registration", udap_register_url, class: "btn btn-dark" %>
            </div>
        </div>
        <div class="col-md-6">
            <h3>UDAP metadata <span style="font-size:75%">(<code>GET [base]/.well-known/udap</code>)</span></h3>
            <code class="json" style="width:max-content;">
                <%= @udap_metadata.to_json %>
            </code>
        </div>
    </div>
</div>
