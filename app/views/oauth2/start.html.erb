<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <h1>Tiered UDAP OAuth2</h1>

            <%= form_for @patient_server, url: oauth2_restart_url, method: :get, class: "form" do |f| %>
            <ul class="list-group">
                <li class="list-group-item">Base URL: <%= f.text_field :base, readonly: true, class: "form-control" %></li>
                <li class="list-group-item">
                    Client Id: <%= f.text_field :client_id, class: "form-control" %>
                    <small class="text-muted">Client ID should be set through UDAP Dynamic Client Registration, but you are allowed to edit it here for development purposes.</small>
                </li>
                <li class="list-group-item">Identity Provider URL: <%= f.text_field :identity_provider, class: "form-control" %></li>
            </ul>
            <% end %>

            <div class="mt-4">
                <%= link_to "Sign In via UDAP Tiered OAuth2", oauth2_restart_url, class: "btn btn-primary mb-2" %>
                <%= link_to "Register with UDAP Dynamic Client Registration", udap_start_url, class: "btn btn-dark mb-2" %>
                <%= link_to "Change Patient Server Base (Resource Server)", root_url, class: "btn btn-secondary" %>
            </div>
        </div>
        <div class="col-md-6">
            <h3>UDAP metadata <span style="font-size:75%">(<code>GET [base]/.well-known/udap</code>)</span></h3>
            <code class="json" style="width:max-content;">
                <%= @udap_metadata.to_json %>
            </code>
        </div>
    </div>
</div>
